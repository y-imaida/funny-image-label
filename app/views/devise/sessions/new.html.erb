<div class="user-login-content">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <% if devise_error_messages! != "" %>
          <div class="flash-msg alert alert-warning" role="alert">
            <%= devise_error_messages! %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default login-form">
          <div class="panel-body">
            <h1>ログイン</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス" %>
              </div>
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
              </div>
              <div class="actions">
                <%= f.submit "ログイン", class: "btn btn-block btn-primary" %>
              </div>
            <% end %>
            <div class="text-center">
              または
            </div>
            <div class="actions">
              <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-block btn-primary" do %>
                <%= fa_icon "facebook-official fw", text: "Facebookでログイン" %>
              <% end %>
            </div>
            <div class="actions">
              <%= link_to user_twitter_omniauth_authorize_path, class: "btn btn-block btn-primary" do %>
                <%= fa_icon "twitter fw", text: "Twitterでログイン" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
